{
	"name": "tt-rss status",
	"version": "1.0",
	"description": "A simple extention that adds an icon indicating the number of unread rss items in your tiny tiny rss feed and serves as a shortcut to the site",
	"author": "Jonathan Ketchker",
	"options_page": "options.html",
	"action": {
		"default_title": "tt-rss status",
		"default_icon": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": [
		"storage", "alarms"
	],
	"host_permissions": [ "http://*/", "https://*/"  ],
	"manifest_version": 3
}
